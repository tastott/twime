<!DOCTYPE html>
<html lang="en">
    <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/pure")
    <link rel="stylesheet" type="text/css" href="~/Content/jqPlot/jquery.jqplot.css" />
    @Scripts.Render("~/bundles/modernizr")
    <script>
        var require = {
            baseUrl: "../scripts",
            paths: {
                "jquery": "jquery-1.8.2.min",

                // WORKAROUND : jQuery plugins + shims
                "jqplot.core": "charts/jquery.jqplot",
                "jqplot": "charts/jqplot.module"
            },
            shim: {
                "jqplot.core": { deps: ["jquery"] },
                "jqplot": { deps: ["jqplot.core"] }
            }
        };
    </script>
    <script type="text/javascript" src="~/Scripts/require.js"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    </head>
    <body role="main">
        <div id="layout">
            <div id="menu">
                <div class="pure-menu pure-menu-open">
                    <a class="pure-menu-heading" href="@Url.Action("Index", "Home")">t.w.i.m.e</a>
                    <ul>
                        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li><a href="@Url.Action("Analysis", "Home")">Analysis</a></li>
                    </ul>
                    <ul data-bind="foreach: Rides">
                        <li style="font-size: small"><a data-bind="text: Filename, click: $parent.LoadAnalysis(Guid)"></a></li>
                    </ul>
                </div>
            </div>
            <div id="main" role="main">
                @RenderBody()
            </div>
        </div>
    </body>
</html>
