@{
    ViewBag.Title = "twime";
}

 <div class="container theme-showcase" role="main">

    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
        <h1>"The Wind is my <strong>Enemy.</strong>"</h1>
        <p>You would have gone <i>so</i> much faster without that stupid wind.</p>
        <p>Upload a GPX of your blustery ride to salve your damaged ego.</p>
        <div>
            @using(Html.BeginForm("Upload", "Home", FormMethod.Post, new {enctype="multipart/form-data"}))
            {
                <table>
                    <tr>
                        <td>
                            File:
                        </td>
                        <td>
                            <input type="file" name="Input.File" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Wind speed (mph):
                        </td>
                        <td>
                            <input type="number" name="Input.WindSpeedMph" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Wind bearing (degrees):
                        </td>
                        <td>
                            <input type="number" name="Input.WindBearingDegrees" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Mass (kg):
                        </td>
                        <td>
                            <input type="number" name="Input.Mass" />
                        </td>
                    </tr>
                </table>
               
                
                <div>
                    <button type="submit" class="btn btn-primary btn-lg" role="button">Upload</button>
                </div>
            }
        </div>
    </div>
     <div>
         <h2>@ViewBag.Thingy</h2>
     </div>
 </div>